{
  "name": "config-compartor",
  "version": "1.0.0",
  "description": "Kubernetes Config Comparator - Compare secrets and configmaps between clusters",
  "main": "dist/backend/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --exec ts-node src/backend/index.ts",
    "dev:frontend": "cd frontend && npm start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/backend/index.js",
    "install:frontend": "cd frontend && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "2.0.2",
    "@kubernetes/client-node": "^0.20.0",
    "js-yaml": "^4.1.0",
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "typescript": "^5.5.3",
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/multer": "^1.4.7",
    "@types/js-yaml": "^4.0.5",
    "@types/diff": "^5.0.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "concurrently": "^8.2.0"
  },
  "private": true
}
